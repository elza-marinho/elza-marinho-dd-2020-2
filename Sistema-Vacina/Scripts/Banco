DROP  DATABASE IF EXISTS VACINA;
CREATE schema VACINA;
USE VACINA;

CREATE TABLE PESQUISADOR(
IDPESQUISADOR INT NOT NULL AUTO_INCREMENT PRIMARY KEY,
NOME VARCHAR (200) not null,
DATANASCIMENTO DATE not null,
SEXO CHAR(1),
CPF VARCHAR (11) not null,
INSTITUICAO VARCHAR(100) NOT NULL
);

CREATE TABLE VACINA (
IDVACINA INT NOT NULL auto_increment primary KEY,
PAISDEORIGEM VARCHAR (150) not null,
ESTAGIOPESQUISA int not null,
DATAINICIO DATE not null,
IDPESQUISADOR INT NOT NULL,
foreign key (IDPESQUISADOR) REFERENCES PESQUISADOR(IDPESQUISADOR)
);



CREATE TABLE Pessoa(
IDPESSOA INT NOT NULL AUTO_INCREMENT PRIMARY KEY,
NOME VARCHAR (200) not null,
DATANASCIMENTO DATE not null,
SEXO CHAR(1),
CPF VARCHAR (11) not null,
VOLUNTARIO BOOLEAN 

);

CREATE TABLE VACINA_APLICADA(
IDVACINAAPLICADA INT NOT NULL AUTO_INCREMENT PRIMARY KEY,
IDPESSOA INT NOT NULL,
IDVACINA INT NOT NULL,
IDPESQUISADOR INT NOT NULL,
DATAAPLICACAO DATE NOT NULL,
NOTA INT NOT NULL,
FOREIGN KEY (IDPESSOA) REFERENCES PESSOA (IDPESSOA),
FOREIGN KEY (IDVACINA) REFERENCES VACINA (IDVACINA),
FOREIGN KEY (IDPESQUISADOR) REFERENCES PESQUISADOR (idpesquisador)
);






